<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_game3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_doit" />


    <TextView
        android:id="@+id/player11"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"

        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/score11"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="130dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/player12"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/score12"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="125dp"
        android:textSize="25sp"
        />


    <TextView
        android:id="@+id/player13"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="70dp"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/score13"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="320dp"
        android:textSize="25sp"
        />


    <TextView
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:countDown="true"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/todo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/yes" />

        <ImageView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/no" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/button_stroke_black95_press"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/btn_back"
            android:textColor="@color/white95"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>